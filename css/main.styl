@import 'nib/vendor'
@import 'nib/gradients'

@font-face
  // source: http://www.fontsquirrel.com/fonts/kirsty
  font-family Kirsty
  font-weight normal
  font-style normal
  src url('../fonts/Kirsty.ttf') format('truetype')
@font-face
  // source: http://www.fontsquirrel.com/fonts/hominis
  font-family Hominis
  font-weight normal
  font-style normal
  src url('../fonts/HOMINIS-webfont.ttf')
@font-face
  // source: http://www.fontsquirrel.com/fonts/yataghan
  font-family Yataghan
  font-weight normal
  font-style normal
  src url('../fonts/yataghan.ttf ')
@font-face
  // source: http://www.fontsquirrel.com/fonts/langdon
  font-family Langdon
  font-weight normal
  font-style normal
  src url('../fonts/Langdon.otf')
@font-face
  // source: http://www.fontsquirrel.com/fonts/quattrocento-sans
  font-family Quattrocento
  font-weight normal
  font-style normal
  src url('../fonts/QuattrocentoSans-Regular.otf ')
@font-face
  // source: http://www.fontsquirrel.com/fonts/matchbook
  font-family Matchbook
  font-weight normal
  font-style normal
  src url('../fonts/Matchbook.otf ')

bubble(bg-top, bg-bottom, radius)
  box-shadow 0 0 5px rgba(0, 0, 0, 0.6), 0 0 0 1px #000, inset 0 1px 0 rgba(255, 255, 255, 0.2)
  background linear-gradient(top, bg-top, bg-bottom)
  border-radius radius

selectable(args)
  -webkit-touch-callout args
  -webkit-user-select args
  -khtml-user-select args
  -moz-user-select args
  -ms-user-select args
  user-select args

header-height = 86px

a
  color yellow
html
  width 100%
  height 100%
  margin 0 0
body
  width 100%
  height 100%
  background-color #1f1f1f
  color white
  margin 0 auto
#header
  width 100%
  height header-height
  color #ccc
  background-color rgba(0, 0, 0, 0.27)
  background linear-gradient(top, #191919, #1f1f1f)
  border-bottom 2px #444 solid
  position relative
  z-index 2
  h1, h2
    text-align center
    margin 0
  h1
    font-family Kirsty
    font-size 50px
    color #00BE63
    text-shadow 1px 2px 2px black
  h2
    font-family Yataghan
    font-size 21px
    color #00F37F
    text-shadow 1px 2px 2px black
    margin-top -10px
#links
  bubble #434343 #0D0D0D 8px
  padding 6px 6px 6px 3px
  margin 0
  border-radius 0 8px 8px 0
  position absolute
  left 0
  top 110px
  z-index 9999
  li
    width 29px
    height 29px
    margin 0 2px
    display block
    position relative
  a
    color #555
    width 29px
    height 29px
    background-size 100%
    display block
    left 1px
    top 1px
    position absolute
    &:hover
      width 32px
      height 32px
      margin-right 0
      left 0
      top 0
  a.flickr
    background-image url(../gfx/link-icons/camera.png)
  a.fb
    background-image url(../gfx/link-icons/fb.png)
  a.twitter
    background-image url(../gfx/link-icons/twitter.png)
  a.github
    background-image url(../gfx/link-icons/terminal.png)
  a.wikimedia
    background-image url(../gfx/link-icons/wikimedia.png)
    background-position 0 -8px;
#hire
  color red
  font-family Hominis
  font-size 22px
  padding 3px
  float right
  margin-left 130px
  position absolute
  left 50%
  bottom 4px
#content
  width 100%
  background linear-gradient(top, #1f1f1f, #505050)
  background-image url(../gfx/city.jpg)
  background-size cover
  border-top 1px #333 solid
  overflow hidden
  position absolute
  top header-height + 2
  bottom 0
  left 0
  right 0
.nav
  width 43px
  height 90px
  position fixed
  top 280px
  font-size 50px
  text-align center
  background rgba(255, 255, 255, 0.3)
  cursor pointer
  selectable none
  z-index 9999
  &:hover
    background rgba(255, 255, 255, 0.44)
  span
    vertical-align sub
#nav-left
  left 0
  border-radius 0 16px 16px 0
#nav-right
  right 0
  border-radius 16px 0 0 16px
#slides
  padding-top 8px
  overflow visible
  position relative
.project
  bubble #434343 #0D0D0D 26px
  padding 1px 23px 20px 21px
  max-width 520px
  text-align center
  margin 0 auto
  .name
    color #ddd
    font-family Quattrocento
    font-weight normal
    font-size 38px
    text-shadow 2px 1px 2px #090909
    margin 8px auto
  .cover
    width 100%
    box-shadow 3px 3px 12px #000
    border-radius 16px
    margin 0 auto
  .info
    color #9EFFD1
    font-family Quattrocento
    margin-top 10px
    a
      color #888888
      text-decoration none
      &:hover
        color #989898
    p
      text-align center
      margin 4px auto
    hr
      width 12px
      border-color #333
      margin 2px auto
    .type
      color white
      font-family Matchbook
      font-size 30px
      text-shadow 1px 1px 2px black
    .job
      font-size 20px
    .credits
      font-size 18px