@import 'nib/vendor'
@import 'nib/gradients'

box-shadow()
  -webkit-box-shadow arguments
  -moz-box-shadow arguments
  -o-box-shadow arguments
  box-shadow arguments

@font-face
  // source: http://www.fontsquirrel.com/fonts/kirsty
  font-family Kirsty
  font-weight normal
  font-style normal
  src url('../fonts/Kirsty.ttf') format('truetype')
@font-face
  // source: http://www.fontsquirrel.com/fonts/yataghan
  font-family Yataghan
  font-weight normal
  font-style normal
  src url('../fonts/Yataghan.ttf') format('truetype')
@font-face
  // source: http://www.fontsquirrel.com/fonts/lobster
  font-family Lobster
  font-weight normal
  font-style normal
  src url('../fonts/Lobster.otf') format('opentype')
@font-face
  // source: http://www.fontsquirrel.com/fonts/quattrocento-sans
  font-family Quattrocento
  font-weight normal
  font-style normal
  src url('../fonts/QuattrocentoSans-Regular.otf') format('opentype')
@font-face
  // source: http://www.fontsquirrel.com/fonts/matchbook
  font-family Matchbook
  font-weight normal
  font-style normal
  src url('../fonts/Matchbook.otf') format('opentype')
@font-face
  // source: http://www.fontsquirrel.com/fonts/bitstream-vera-sans
  font-family BitstreamVeraSans
  font-weight normal
  font-style normal
  src url('../fonts/BitstreamVeraSans.ttf') format('truetype')

body
  width 100%
  height 100%
  background-color #4e0204
  background-image url(../gfx/tile-red-scratch.jpg)
  color white
  text-align center
  margin 0
a
  text-decoration none
#header
  h1, h2
    text-shadow 1px 2px 2px black
    margin 0
  h1
    font-family Kirsty
    font-size 112px
    color #00be35
  h2
    font-family Yataghan
    font-size 42px
    color #00d34c
    margin-top -10px
#qr-code
  width 70px
  border 3px #756e6e solid
  position fixed
  top 33px
  right 15px
  cursor pointer
  z-index 9999
#menu
  color #e0e0e0
  margin 6px auto
  position fixed
  top 132px
  right 0
  z-index 9999
  div
    font-family BitstreamVeraSans
    font-size 22px
    padding 6px 12px
    border-top 1px solid #242424
    border-right 1px solid #242424
    border-left 1px solid #1f1e1e
    border-bottom 1px solid #4d4d4d
    border-radius 13px 0 0 13px
    background-color rgba(0, 0, 0, 0.52)
    cursor pointer
    &:hover
      color #fafafa
      background-color rgba(0, 0, 0, 0.3)
      border-color #777
@media (max-width: 630px)
  #qr-code, #menu
    position absolute
#links
  box-shadow 0 0 5px rgba(0, 0, 0, 0.6), 0 0 0 1px #000, inset 0 1px 0 rgba(255, 255, 255, 0.2)
  background linear-gradient(top, #434343, #0D0D0D)
  padding 6px 6px 6px 3px
  border-radius 0 8px 8px 0
  position fixed
  left 0
  top 240px
  margin 0
  z-index 9999
  li
    width 52px
    height 52px
    margin 0 2px
    display block
    position relative
    .link-text
      color #cad0cf
      text-shadow 3px 2px 2px black
      font-family Arial
      font-size 22px
      white-space nowrap
      background-color rgba(0, 0, 0, 0.5)
      padding 2px 11px
      border-radius 18px
      position absolute
      margin-left 40px
      margin-top 15px
      opacity 0
    a
      width 100%
      height 100%
      background-size 100%
      background-repeat no-repeat
      display inline-block
      position absolute
      left 1px
      top 1px
      &:hover
        width 56px
        height 56px
        margin-right 0
        left 0
        top 0
  a.fb
    background-image url(../gfx/link-icons/fb.png)
  a.twitter
    background-image url(../gfx/link-icons/twitter.png)
  a.github
    background-image url(../gfx/link-icons/terminal.png)
  a.flickr
    background-image url(../gfx/link-icons/camera.png)
  a.wikimedia
    background-image url(../gfx/link-icons/wikipedia.png)
#content
  position relative
.page
  overflow visible
  position relative
  > h1
    color #eee
    font-family Lobster
    font-size 34px
    text-shadow 3px 4px 4px black
    text-decoration underline
    margin-top 32px
    margin-bottom 7px
.project
  width 40%
  max-width 800px
  min-width 416px
  padding 20px 0
  margin auto 1em
  display inline-block
  .cover
    width 100%
    background-color #343434
    box-shadow 3px 3px 12px #000
    border-radius 16px
    display inline-block
    transition all 0.16s ease-in-out
    &:hover
      box-shadow 0px 2px 31px #aa3d42
      transform scale(1.006)
  .info
    width 100%
    font-family Quattrocento
    margin-top 8px
    white-space nowrap
    display inline-block
    vertical-align bottom
    a
      color #888888
      &:hover
        color #ddd
    p
      margin 4px auto
    hr
      width 12px
      border-color #333
      margin 2px auto
    .name
      color #ddd
      font-family Quattrocento
      font-weight normal
      font-size 38px
      text-shadow 2px 1px 2px #090909
      margin 8px auto
    .type
      color white
      font-family Matchbook
      font-size 32px
      text-shadow 1px 1px 2px black
    .job
      color #4ce21d
      font-size 20px
    .credits
      color #9effd1
      font-size 18px
@media (max-width: 903px)
  .project
    width 74%
    max-width auto
    min-width 0
    .info
      white-space normal
#logos
  img
    margin 0 8px
    opacity 0.9
    &:hover
      opacity 1
#copyright
  color #bebbbb
  font-family Quattrocento
  margin 0
  padding 16px 0
#info-window
  min-height 10px
  background #5e5e5e
  background-image url(../gfx/tile-brushed-metal.png)
  color #fff
  font-family Arial
  text-align left
  border 1px solid #4d4d4d
  border-radius 20px
  box-shadow 6px 7px 8px rgba(0, 0, 0, 0.8)
  position absolute
  top 10px
  left 50%
  padding 21px
  padding-left 16px
  z-index 9999
  #content
    margin-right 19px
    position absolute
    bottom 0
  .selectable
    &::selection
      background-color #c5a11b
    &::-moz-selection
      background-color #c5a11b
  .close
    width 24px
    height 24px
    position absolute
    top 9px
    right 4px
    color #8f8f8f
    cursor pointer
    display block
    &:hover
      color #ececec
#about-content
  color #bebebe
  font-family BitstreamVeraSans
  strong
    color #ececec